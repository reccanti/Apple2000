					this._fancyTextCheckbox = root.querySelector("input[name='use-simple-text']");

					// setup events
					this._toggleButton.addEventListener("click", this.openMenu);
					this._closeButton.addEventListener("click", this.closeMenu);
					this._themeSelect.addEventListener("change", this.switchTheme);
					this._textSizeSlider.addEventListener("input", this.adjustTextSize)
					this._fancyTextCheckbox.addEventListener("change", this.swapFancyText)
				}

				openMenu = () => {
					this._rootElem.classList.add("Menu--open");
					this._rootElem.classList.remove("Menu--close");
				}

				closeMenu = () => {
					this._rootElem.classList.add("Menu--close");
					this._rootElem.classList.remove("Menu--open");
				}

				adjustTextSize = e => {
					const textSize = Number(e.target.value);
					if (textSize) {
						document.documentElement.style.setProperty('--font-size-multiplier', textSize)
					}
				}

				swapFancyText = e => {
					const isChecked = e.target.checked;
					if (isChecked) {
						document.documentElement.style.setProperty('--font-family-header', 'var(--font-basic)');
					} else {
						document.documentElement.style.setProperty('--font-family-header', 'var(--font-fancy)');
					}
				}

				switchTheme = e => {
					const newColor = e.target.value
					if (newColor) {
						this._themeRoot.className = "theme-root";
						switch(newColor) {
							case "blue":
